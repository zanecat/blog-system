<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
				<% if @user.enterprise %>
				<%= image_tag("enterprise.jpg") %>
				<% end %>
				<% if @user.admin %>
				<%= image_tag("admin.jpg") %>
				<% end %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
	</div>
	<div class="span8">
		<% if @user.posts.any? %>
		<h3>Posts (<%= @user.posts.count %>)</h3>
		<ol class="posts">
			<%= render @posts %>
		</ol>
		<%= will_paginate @posts %>
		<% end %>
	</div>
</div>